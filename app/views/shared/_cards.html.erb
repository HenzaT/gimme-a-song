<div class="card rounded-5">
  <div class="card-body text-center" data-turbo-frame="time">
    <div>
      <h5 class="card-title text-center"><strong>Time Signature</strong></h5>
      <i class="fa-solid fa-lock-open"></i>
    </div>
    <p class="card-text">The time signature is:</p>
    <h2 class="text-center"><%= @song.time_signature %></h2>
    <div class="text-center">
      <a href="#" data-turbo-frame="time" class="btn btn-info">something else</a>
    </div>
  </div>
</div>

  <div data-controller="expander">
    <div class="card rounded-5 active">
      <div class="card-body text-center">
      <div>
        <h5 class="card-title"><strong>Instrument</strong></h5>
        <i class="fa-solid fa-lock-open"></i>
      </div>
        <p class="card-text">Your instrument is: </p>
        <h2 class="text-center"><%= @instrument.name %></h2>
        <div class="text-center">
          <a href="#" class="btn btn-info">something else</a>
          <button data-action="click->expander#fire" class="btn btn-success mt-3">+</button>
        </div>
      </div>
    </div>

    <div data-expander-target="expandingElement" class="card rounded-5 d-none">
      <div class="card-body text-center">
      <div>
        <h5 class="card-title"><strong>Instrument</strong></h5>
        <i class="fa-solid fa-lock-open"></i>
      </div>
        <p class="card-text">Your instrument is: </p>
        <h2 class="text-center"><%= @instrument.name %></h2>
        <div class="text-center">
          <a href="#" class="btn btn-info">something else</a>
          <button class="btn btn-success mt-3">+</button>
        </div>
      </div>
    </div>

    <div class="card rounded-5 d-none">
      <div class="card-body text-center">
        <div>
          <h5 class="card-title"><strong>Instrument</strong></h5>
          <i class="fa-solid fa-lock-open"></i>
        </div>
        <p class="card-text">Your instrument is: </p>
        <h2 class="text-center"><%= @instrument.name %></h2>
        <div class="text-center">
          <a href="#" class="btn btn-info">something else</a>
          <button class="btn btn-success mt-3">+</button>
        </div>
      </div>
    </div>

    <div class="card rounded-5 d-none">
      <div class="card-body text-center">
        <div>
          <h5 class="card-title"><strong>Instrument</strong></h5>
          <i class="fa-solid fa-lock-open"></i>
        </div>
        <p class="card-text">Your instrument is: </p>
        <h2 class="text-center"><%= @instrument.name %></h2>
        <div class="text-center">
          <a href="#" class="btn btn-info">something else</a>
          <button class="btn btn-success mt-3">+</button>
        </div>
      </div>
    </div>
  </div>

<div class="card rounded-5"
      data-controller="randomBpm">
  <div class="card-body text-center">
    <div>
      <h5 class="card-title"><strong>BPM</strong></h5>
      <i class="fa-solid fa-lock-open"></i>
    </div>
    <p class="card-text">The BPM is: </p>
    <h2 data-randomBpm-target="bpm">120</h2>
    <button class="btn btn-info" data-action="click->randomBpm#changeBpm">something else</button>
  </div>
</div>

