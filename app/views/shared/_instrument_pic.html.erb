<% if instrument.name == 'guitar' %>
  <%= image_tag 'guitar.png', class: "instrument-picture" %>
<% elsif instrument.name == 'bass' %>
  <%= image_tag 'bass.png', class: "instrument-picture" %>
<% elsif instrument.name == 'synth' %>
  <%= image_tag 'synth.png', class: "instrument-picture" %>
<% elsif instrument.name == 'piano' %>
  <%= image_tag 'piano.png', class: "instrument-picture" %>
<% elsif instrument.name == 'drum machine' %>
  <%= image_tag 'drum-machine.png', class: "instrument-picture" %>
<% else %>
  <%= image_tag 'vocals.png', class: "instrument-picture" %>
<% end %>
