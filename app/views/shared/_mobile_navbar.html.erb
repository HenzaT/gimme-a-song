<div class="mobile-navbar d-block d-sm-none position-relative" data-controller="navbar">
  <div class="container-fluid d-flex justify-content-between align-items-center py-2 px-3">
    <%= link_to root_path, class: "navbar-brand" do %>
      Gimme a Song
    <% end %>

    <div class="burger-btn" id="burgerButton" data-navbar-target="burger" data-action="click->navbar#toggleNav">
      <span class="line-one" data-navbar-target="lineOne"></span>
      <span class="line-two" data-navbar-target="lineTwo"></span>
    </div>

    <div id="mobileMenuOverlay" class="mobile-menu-overlay hidden" data-navbar-target="menu">
      <ul class="nav flex-column text-center">
        <% if user_signed_in? %>
          <li><%= link_to "Home", root_path, class: "nav-link" %></li>
          <li><%= link_to "New Idea", new_song_path, class: "nav-link" %></li>
          <li><%= link_to "My Songs", my_songs_path, class: "nav-link" %></li>
          <li><%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %></li>
        <% else %>
          <li><%= link_to "New Idea", new_song_path, class: "nav-link" %></li>
          <li><%= link_to "Login", new_user_session_path, class: "nav-link" %></li>
          <li><%= link_to "Sign up", new_user_registration_path, class: "nav-link" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
