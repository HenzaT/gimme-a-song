<div class="new-body" data-spacebar-target="spacebarElement">
  <div>
    <%= render "shared/new_navbar" %>
  </div>

  <div class="container my-4">
    <div class="d-flex justify-content-between">
      <%= render "shared/cards" %>
    </div>
  </div>

  <div class="container d-flex justify-content-center my-4"
        data-controller="spacebar">
    <div class="me-4">
      <%= button_to 'Gimme a Song!', new_song_path, method: :get %>
    </div>
    <div class="me-4">
      <%= button_to 'Done', songs_path(bpm: @song.bpm, mood: @song.mood, key: @song.key, time_signature: @song.time_signature) %>
    </div>
    <%# <button data-action="keydown.->spacebar#refresh">Click me</button> %>
  </div>

  <div>
    <%# <%= render 'shared/form_name' %>
